@model IEnumerable<MvcTask.Models.Task>

@helper Truncate(string input, int length)
{
      if (input.Length <= length) {
           @input
      } else {
           @input.Substring(0, length)<text>...</text>
      }
}


@{
ViewBag.Title = "Storeeee";
 }

<h2>Index</h2>

<p> @Html.ActionLink("Create New", "Create")
</p>

<table>
 <tr>
    <th>
       Name
     </th>
    <th>
     Deadline
    </th>
      <th>
   Priority
    </th>

    <th></th>
  </tr>
@foreach (var item in Model) {
  <tr>
 <td> 
    @Truncate(item.Name, 25)
 </td>
      <td>
            @Html.DisplayFor(modelItem => item.Deadline)
        </td>
      <td>
     @Html.DisplayFor(modelItem => item.Priority)
 </td>
 <td>
     @Html.ActionLink("Edit", "Edit", new { parentListId=item.TaskId }) | @Html.ActionLink("Delete", "Delete", new { parentListId=item.TaskId })
 </td>
 </tr>
}
</table>