            @Html.DisplayFor(model => model.BirthdatePassenger)
            @Html.ValidationMessageFor(model => model.BirthdatePassenger)

        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CNP)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.CNP)
            @Html.ValidationMessageFor(model => model.CNP)

        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.PlaceRow)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.PlaceRow)
            @Html.ValidationMessageFor(model => model.PlaceRow)

        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.PlaceColumn)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.PlaceColumn)
            @Html.ValidationMessageFor(model => model.PlaceColumn)

        </div>
        
    </fieldset>
}


