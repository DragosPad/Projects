@model AirlineCompany.Models.Reservation

@{
    ViewBag.Title = "Confirm";
}

<h2>Confirm successful</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Confirm Passenger</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.FligthId)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.FligthId)
            @Html.ValidationMessageFor(model => model.FligthId)

        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.NamePassenger)
